
public class Rectangulo {

	// Atributo base y altura de tipo decimal
	// Consultar base y altura
	// Modificar base y altura

	private double base;
	private double altura;

	public Rectangulo() {
		this.base = 10.20;
		this.altura = 20.15;
		String mensaje = "Base = " + this.base + " y la altura = " + this.altura;
		System.out.println(mensaje);
	}

	public Rectangulo(double base, double altura) {
		this.base = base;
		this.altura = altura;
		String mensaje = "Base = " + this.base + " y la altura = " + this.altura;
		System.out.println(mensaje);
	}

	public double getBase() {
		return base;
	}

	public void setBase(double base) {
		this.base = base;
	}

	public double getAltura() {
		return altura;
	}

	public void setAltura(double altura) {
		this.altura = altura;
	}
	
	public double areaRectangulo(double base, double altura) {
		double areaRectangulo = base * altura;
		return areaRectangulo;		
	}
	
	public double perimetroRectangulo(double base, double altura) {
		double perimetroRectangulo = ((base*2) + (altura*2));
		return perimetroRectangulo;		
	}
	
	public double hacerCuadrado() {
		double lado = base;
		return lado;
	}
}
