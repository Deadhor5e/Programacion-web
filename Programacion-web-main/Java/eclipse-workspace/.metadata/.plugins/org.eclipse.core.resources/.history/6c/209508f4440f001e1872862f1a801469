package circulos;

//Atributo radio
//Constructor para inicializar el radio
//Getters y Setters
//CalcularArea()

public class Circulos {
	
	private double radio;
	static double PI;
	
	public Circulos() {}

	public Circulos(double radio) {
		this.radio = radio;
	}

	public double getRadio() {
		return radio;
	}

	public void setRadio(double radio) {
		this.radio = radio;
	}

	public double calcularArea(double radio) {
		double calcularArea = PI * (radio*radio);
		return calcularArea;
	}
	
	public String toString() {
		String textoCirculo = "Titulo: " + this.radio + ", Autor: " + this.autor + ", Año de publicación: " + this.publicacion + ".";
		return textoCirculo;
	}
}
